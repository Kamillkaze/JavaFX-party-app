<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.UpdateGuestWindowController"
            prefHeight="400.0" prefWidth="600.0">

    <content>
        <VBox spacing="10">
            <Label text="Type phone number of guest to update below"/>
            <TextField fx:id="phoneToUpdateTextField"/>

            <HBox spacing="10">
                <Button text="Find" onAction="#findGuestToUpdate"/>
                <Button text="Clear" onAction="#clearFields"/>
            </HBox>

            <GridPane vgap="10" hgap="10">
                <Label text="Type name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Type preffered food:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="foodTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Type preffered drink:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="drinkTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Type in phone number:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </content>
</DialogPane>
